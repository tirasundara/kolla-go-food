<%= form_for [@reviewable, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, cols:50, rows: 8 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
